@model NorthwindWeb.ViewModels.RegionIndex

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container">

    <h2>Detalii</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regiuni", "Index", "Regions")
        </li>
        <li class="active">Detalii</li>
    </ol>

    <div>
        <div class="col-md-6">
            <h4>Regiune</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                   Descriere Regiune
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.region.RegionDescription)
                </dd>

            </dl>
            <p>
                <button class="btn btn-default ">@Html.ActionLink("Modifica", "Edit", new { id = Model.region.RegionID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
                <button class="btn btn-default ">@Html.ActionLink("Inapoi la lista", "Index","Regions", htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
            </p>
        </div>
        <div class="col-md-6">
            <h4>Teritorii</h4>
            <hr />
            <button class="btn btn-default ">@Html.ActionLink("Adauga", "Create", new { id = ViewBag.RegionID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
            <hr />
            @foreach (var y in Model.details)
            {<br />
                <dl class="dl-horizontal">
                    <dt><br />
                        Teritorii
                    </dt>
                    <dd><br />
                        @y.TerritoryID
                    </dd>
                    <dt>
                        Descriere teritorii
                    </dt>
                    <dd>
                        @y.TerritoryDescription
                    </dd>
                </dl>

                <p>
                    <br />
                    <button class="btn btn-default">@Html.ActionLink("Modifica", "Edit", "Territories", new { id = @y.TerritoryID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button> &nbsp;&nbsp;
                    <button class="btn btn-default ">@Html.ActionLink("Sterge", "Delete", "Territories", new { id = @y.TerritoryID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
                </p>
            }
            
        </div>
    </div>
</div>

