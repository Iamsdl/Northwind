@model IEnumerable<NorthwindWeb.Models.Region>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container">
    <div class="container">

        <h2>Regiuni</h2>

        <div>
            <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga     Regiuni", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
            <form action="/Regions/Index">
                <div class="input-group cssencapsulate paddingLeftTen">
                    <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

      
        <table class="table">
            <tr>
                <th>
                    Regiune
                </th>
                <th>
                    Sterge
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                      
                        @Html.ActionLink(item.RegionDescription, "Details", new { id = item.RegionID })
                        

                    </td>
                    <td>
                  
                
                        <a href="@Url.Action("Delete", new { id = item.RegionID })"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

