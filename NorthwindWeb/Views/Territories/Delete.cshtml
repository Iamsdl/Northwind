@model NorthwindWeb.Models.Territories

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container">
    <h2>Sterge</h2>

    <h3>Sigur vrei sa stergi?</h3>
    <div>
        <h4>Teritorii</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Region.RegionDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Region.RegionDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TerritoryDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TerritoryDescription)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sterge" class="btn btn-default" /> |
                @Html.ActionLink("Inapoi", "Details", "Regions", new { id = Model.RegionID }, null)
            </div>
        }
    </div>

</div>
