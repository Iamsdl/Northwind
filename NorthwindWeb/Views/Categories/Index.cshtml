@model IEnumerable<NorthwindWeb.Models.Categories>

@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Categorii</h2>

<p>
    <button class="btn btn-default">@Html.ActionLink("Adauga Categorie", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    
</p>
<table class="table">
    <tr>
        <th>
            Nume Categorie
        </th>
        <th>
            Descriere
        </th>

        <th>
            Optiuni
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Detalii", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Sterge", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
