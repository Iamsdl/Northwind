@model IEnumerable<NorthwindWeb.Models.Categories>

@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Categorii</h2>
<hr />
<ol class="breadcrumb">

    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>

    <li class="active">Categorii</li>
</ol>
<hr />
<div>
    <button class="btn btn-default ">@Html.ActionLink("Adauga Categorii", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <br /><br />
    <form action="/Categories/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Categorii
                </h4>
            </div>
            <div class="panel-body">
                <table id="CategoriesTable" class="cell-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                Nume Categorie
                            </th>
                            <th>
                                Descriere
                            </th>

                            <th>
                                Sterge
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>

                </table>
            </div>
        </div>
    </div>
</div>
