@model IEnumerable<NorthwindWeb.Models.Categories>

@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Categorii</h2>

<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Categorii", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Categories/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<table class="table">
    <tr>
        <th>
            Nume Categorie
        </th>
        <th>
            Descriere
        </th>

        <th>
            Optiuni
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Detalii", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Sterge", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
