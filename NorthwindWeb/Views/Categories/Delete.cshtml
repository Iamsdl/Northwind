@model NorthwindWeb.Models.Categories

@{
    ViewBag.Title = "Sterte";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Sterge</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Categorii", "Index", "Orders")
    </li>
    <li class="active">Sterge</li>
</ol>

<h3>Esti sigur ca vrei sa-l stergi?</h3>
<div>
    <h4>Categorie</h4>
    <hr />
    
    <dl class="dl-horizontal">
        <dt>
            Nume Categorie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            Descriere
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn btn-default">@Html.ActionLink("Inapoi", "Index", "Categories", htmlAttributes: new { style = "text-decoration:none; color:#333" }) </button> 
            <input type="submit" value="Sterge" class="btn btn-default" /> 
            
        </div>
    }
</div>
