@model IEnumerable<NorthwindWeb.Models.Suppliers>

@{
    ViewBag.Title = "Furnizori";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Furnizori</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>

    <li class="active">Furnizori</li>
</ol>
<hr />
<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Furnizor", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Suppliers/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            Furnizori
        </h4>
    </div>
    <div class="panel-body">
        <table id="Suppliers" class="cell-border hover order-column">
            <thead>
                <tr>
                    <th>
                        Nume Companie
                    </th>
                    <th>
                        Nume Contact
                    </th>
                    <th>
                        Pozitie
                    </th>
                    <th>
                        Adresa
                    </th>
                    <th>
                        Oras
                    </th>
                    <th>
                        Tara
                    </th>
                    <th>
                        Telefon
                    </th>
                    <th>
                        Sterge
                    </th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>
</div>
</div>