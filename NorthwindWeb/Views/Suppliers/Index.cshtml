@model IEnumerable<NorthwindWeb.Models.Suppliers>

@{
    ViewBag.Title = "Furnizori";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Furnizori</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
  
    <li class="active">Furnizori</li>
</ol>
<hr />
<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Furnizor", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Suppliers/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<table class="table">
    <tr>
        <th>
            Nume Companie
        </th>
        <th>
            Nume Contact
        </th>
        <th>
            Pozitie
        </th>
        <th>
           Adresa
        </th>
        <th>
            Oras
        </th>
        <th>
            Tara
        </th>
        <th>
            Telefon
        </th>
        <th>
            Sterge
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.CompanyName, "Details", new { id = item.SupplierID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id = item. SupplierID })"><i class="fa fa-remove"></i></a>
        </td>
    </tr>
}

</table>
