        <div class="col-lg-12">
            <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
            <iframe id="googleMap" width="100%" scrolling="no" height="400px" frameborder="0"  marginwidth="0" marginheight="0" > </iframe>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCD5UEY0fKPDkaB2ZvQnN9y8ZbO3P-jj3w&callback=myMap"></script>
            <script>
                function myMap() {
                    var mapCanvas = document.getElementById("googleMap");
                    var myCenter = new google.maps.LatLng(44.480104, 26.108327199999962);
                    var mapOptions = { center: myCenter, zoom: 5, mapTypeId: google.maps.MapTypeId.HYBRID };
                    var map = new google.maps.Map(mapCanvas, mapOptions);
                    map.setTilt(45);
                    var marker = new google.maps.Marker({
                        position: myCenter,
                        animation: google.maps.Animation.BOUNCE
                    });
                    marker.setMap(map);
                }
            </script>
            
        </div>
