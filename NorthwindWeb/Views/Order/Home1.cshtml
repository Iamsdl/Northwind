@model NorthwindWeb.ViewModels.OrderIndexData

@using PagedList.Mvc;
@{
    ViewBag.Title = "Orders";
}
<link href="~/css/Order.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Comenzi
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Comenzi</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <table class="table">
                <thead class="thead">
                    <tr role="row">
                        <th>Numar Comanda</th>
                        <th>Data plasare</th>
                        <th>Nume Client</th>
                    </tr>
                </thead>
                <tbody class="tbody">
                    @foreach (var item in Model.Order)
                    {
                        string selectedRow = "";
                        if (item.OrderID == ViewBag.OrderID)
                        {
                            selectedRow = "selectat";
                        }
                        <tr class="@selectedRow" role="row">
                            <td>
                                @Html.ActionLink(Convert.ToString(item.OrderID), "Home1", new { orderID = item.OrderID, page = Model.page.PageNumber, currentFilter = ViewBag.CurrentFilter })
                            </td>
                            <td>
                                @item.OrderDate
                            </td>
                            <td>
                                @item.CompanyName
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Order_Detail != null)
            {<hr>
                <h3>Detali Comanda</h3>
                <table class="table">
                    <thead class="thead">

                    <tr role="row">

                        <th>Nume Produs</th>
                        <th>Pret</th>
                        <th>Cantitate</th>
                        <th>Reducere</th>
                    </tr>
                    </thead>
                    <tbody  class="tbody">
                        @foreach (var item in Model.Order_Detail)
                        {
                            string selectedRow = "";
                            if (item.ProductID == ViewBag.ProductID)
                            {
                                selectedRow = "selectat";
                            }
                            <tr class="@selectedRow">
                                <td>
                                    @Html.ActionLink(item.ProductName, "Home1", new { orderID = ViewBag.OrderID, productID = item.ProductID, page = Model.page.PageNumber, currentFilter = ViewBag.CurrentFilter })
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitPrice) lei
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @(item.Discount * 100)%
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            @if (Model.Product != null)
            {<hr>
                <h3>
                    Caracteristici Produs
                </h3>
                <table class="table">
                    <thead class="thead">
                        <tr role="row">
                            <th>Denumire Produs</th>
                            <th>Categorie</th>
                            <th>Buc</th>
                        </tr>
                    </thead>
                    <tbody  class="tbody">
                        @foreach (var item in Model.Product)
                        {
                            <tr>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.CategoryName
                                </td>
                                <td>
                                    @item.UnitsInStock
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            Page @(Model.page.PageCount < Model.page.PageNumber ? 0 : Model.page.PageNumber) of @Model.page.PageCount
            @Html.PagedListPager(Model.page, page => Url.Action("Home1", new { page, orderID = 0, productID = 0, currentFilter = ViewBag.CurrentFilter }))
           
        </div>
        <div class="col-lg-4">
            <div class="well">
                <h4>Cautare in comenzi</h4>
                <div class="input-group">
                    @using (Html.BeginForm("Home1", "Order", FormMethod.Get))
                    {                  @Html.TextBox("search", ViewBag.CurrentFilter as string)

                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    }
                </div>
                <!-- /input-group -->
            </div>
            <!-- /well -->
            <div class="well">
                <h4>Cele mai expensive comenzi</h4>

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table">
                            <tr>
                                <th>Numar Comanda</th>
                                <th>Cost</th>

                            </tr>

                            @foreach (var item in Model.Order10)
                            {
                                <tr>
                                    <td>@Html.ActionLink(Convert.ToString(item.OrderID), "Home1", new { orderID = item.OrderID, search = item.OrderID })</td>
                                    <td>@item.Cost lei</td>

                                </tr>
                            }
                        </table>

                    </div>
                   
                </div>
            </div>
            <!-- /well -->
            <div class="well">
                <h4>Cea mai mare comanda</h4>
                <table class="table">
                    <tr>
                        <th>@Html.ActionLink(Convert.ToString(Model.Comand.OrderID), "Home1", new { orderID = Model.Comand.OrderID, search = Model.Comand.OrderID })</th>
                        <th>@Model.Comand.Produse Produse</th>

                    </tr>
                </table>
            </div>
            <!-- /well -->
        </div>

    </div>

</div>
