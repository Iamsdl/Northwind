@model NorthwindWeb.ViewModels.OrderIndexData

@using PagedList.Mvc;
@{
    ViewBag.Title = "Orders";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Comenzi
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Comenzi</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <table class="table">
                <tr>
                    <th>Numar Comanda</th>
                    <th>Data plasare</th>
                    <th>Nume Client</th>

                </tr>
                @foreach (var item in Model.Order)
                {
                    string selectedRow = "";
                    if (item.OrderID == ViewBag.OrderID)
                    {
                        selectedRow = "success";
                    }
                    <tr class="@selectedRow">
                        <td>
                            @Html.ActionLink(Convert.ToString(item.OrderID), "Home1", new { id = item.OrderID, page = Model.page.PageNumber, currentFilter = ViewBag.CurrentFilter })
                        </td>
                        <td>
                            @item.OrderDate
                        </td>
                        <td>
                            @item.CompanyName
                        </td>

                    </tr>
                }
            </table>
            @if (Model.Order_Detail != null)
            {<hr>
                <h3>Detali Comanda</h3>
                <table class="table">
                    <tr>

                        <th>Nume Produs</th>
                        <th>Pret</th>
                        <th>Cantitate</th>
                        <th>Reducere</th>
                    </tr>

                    @foreach (var item in Model.Order_Detail)
                    {
                        string selectedRow = "";
                        if (item.ProductID == ViewBag.ProductID)
                        {
                            selectedRow = "success";
                        }
                        <tr class="@selectedRow">
                            <td>
                                @Html.ActionLink(item.ProductName, "Home1", new { pid = item.ProductID, page = Model.page.PageNumber, currentFilter = ViewBag.CurrentFilter })
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @(item.Discount * 100)%
                            </td>
                        </tr>
                    }

                </table>
            }
            @if (Model.Product != null)
            {<hr>
                <h3>
                    Caracteristici Produs
                </h3>
                <table class="table">
                    <tr>
                        <th>Denumire Produs</th>
                        <th>Categorie</th>
                        <th>Disponibile in stoc</th>
                    </tr>
                    @foreach (var item in Model.Product)
                    {
                        <tr>
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.CategoryID
                            </td>
                            <td>
                                @item.UnitsInStock
                            </td>
                        </tr>
                    }
                </table>
            }
            Page @(Model.page.PageCount < Model.page.PageNumber ? 0 : Model.page.PageNumber) of @Model.page.PageCount
            @Html.PagedListPager(Model.page, page => Url.Action("Home1", new { page, id = 0, pid = 0, currentFilter = ViewBag.CurrentFilter }))
