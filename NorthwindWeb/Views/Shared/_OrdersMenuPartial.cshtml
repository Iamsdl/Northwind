@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using NorthwindWeb.Models
@using NorthwindWeb.Context
@{
    var userManager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
    }
@if (Request.IsAuthenticated)
{
                    <li id="blog" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Comenzi<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (userManager.IsInRole(User.Identity.GetUserId(),"Admins") || userManager.IsInRole(User.Identity.GetUserId(), "Managers"))
                            {
                            <li id="orders">
                                @Html.ActionLink("Lista Comenzi", "HomeAdmin", "Order")
                            </li>
                            }
                            <li id="userOrders">
                                @Html.ActionLink("Comenzi '" + User.Identity.GetUserName() +"'", "Home", "Order")
                            </li>
                        </ul>
                    </li>
                    if (userManager.IsInRole(User.Identity.GetUserId(),"Admins"))
        {
                    <li id="dashboard">
                        
                        @Html.ActionLink("Dashboard", "Home", "Dashboard")
                    </li>
        }
}

