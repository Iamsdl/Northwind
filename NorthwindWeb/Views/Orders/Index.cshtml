@model IEnumerable<NorthwindWeb.Models.Orders>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Comenzi</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li class="active">Comenzi</li>
</ol>


<button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga", "Create", "Orders", htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
<form action="/Orders/Index">
    <div class="input-group cssencapsulate paddingLeftTen">
        <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>
<br /><br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Lista comenzi
                </h4>
            </div>
     <div class="panel-body">
           <table id="OrdersTable" class="cell-border hover order-column">
                <thead>
                      <tr>
                         <th>
                             Id Comanda
                         </th>
                         <th>
                             Nume Angajat
                         </th>
                         <th>
                             Expeditor
                         </th>
                         <th>
                             Data livrare
                         </th>
                         <th>
                             Nume Expeditor
                         </th>
                         <th>
                             Adresa
                         </th>
                         <th>
                             Sterge
                         </th>
                    </tr>
               </thead>
              <tbody></tbody>
           </table>
     </div>
   </div>
 </div>
</div>

