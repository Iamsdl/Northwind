@model IEnumerable<NorthwindWeb.Models.Orders>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

    <h2>Comenzi</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li class="active">Comenzi</li>
    </ol>

    
        <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga", "Create", "Orders", htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Orders/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <br /><br />

    <table @*id="MyTable"*@ class="table">
        <thead>
            <tr>
                <th>
                    Id Comanda
                </th>
                <th>
                    Nume Angajat
                </th>
                <th>
                    Expeditor
                </th>
                <th>
                    Data livrare
                </th>
                <th>
                    Nume Expeditor
                </th>
                <th>
                    Adresa
                </th>
                <th>
                    Sterge
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.OrderID.ToString(), "Details", new { id = item.OrderID })
                        @*@Html.DisplayFor(modelItem => item.Customer.CompanyName)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shipper.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipAddress)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.OrderID })"><i class="fa fa-remove"></i></a>
                        @*@Html.ActionLink("Sterge", "Delete", new { id = item.OrderID })*@
                    </td>
                </tr>
            }
        </tbody>

    </table>

