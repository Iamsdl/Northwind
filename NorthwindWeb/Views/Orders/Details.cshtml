@model NorthwindWeb.ViewModels.Orders.OrderDetali

@{
    ViewBag.Title = "Detalii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



    <h2>Detalii</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Comenzi", "Index", "Orders")
        </li>
        <li class="active">Detalii</li>
    </ol>
    <div>
        <div class="col-md-6">
            <h4>Comenzi</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Id comanda
                </dt>
                <dd>
                    @Html.DisplayFor(model=>model.order.OrderID)
                </dd>
                <dt>
                   Companie
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.Customer.CompanyName)
                </dd>

                <dt>
                    Prenume
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.Employee.LastName)
                </dd>

                <dt>
                    Nume Companie
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.Shipper.CompanyName)
                </dd>

                <dt>
                    Data livrarii
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.ShippedDate)
                </dd>

                <dt>
                    Numele livrarii
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.ShipName)
                </dd>

                <dt>
                    Adresa livrarii
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.ShipAddress)
                </dd>

                <dt>
                    Oras
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.ShipCity)
                </dd>

                <dt>
                    Tara
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order.ShipCountry)
                </dd>

            </dl>

            <p>
                <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Modifica", "Edit", "Orders", new { id = Model.order.OrderID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>   
                <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Inapoi la lista", "Index", "Orders", htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>   
              
            </p>
        </div>
        <div class="col-md-6">
            <h4>Detalii Comanda</h4>
            <hr />
            <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga", "Create", "OrderDetail", new { id = ViewBag.orderid }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>  
            <br /><br /><br />
           @foreach (var y in Model.details)
           {
              <dl class="dl-horizontal">

                <dt><br />
                   Id-ul Produsului 
                </dt>

                <dd><br />
                    @y.ProductID
                </dd>

                <dt>
                   Cantitate
                </dt>

                <dd>
                   @y.Quantity
                </dd>

                <dt>
                    Preț unitar 
                </dt>

                <dd>
                    @decimal.Round(y.UnitPrice ?? 0, 2).ToString() lei
                </dd>

                <dt>
                    Discount 
                </dt>

                <dd>
                    @y.Discount
                </dd> 
                  <dt>
                      <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Modifica", "Edit","OrderDetail", new { OrderID = @y.OrderID, ProductID = @y.ProductID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
                  
                      <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Sterge", "Delete", "OrderDetail", new { OrderID = @y.OrderID, ProductID = @y.ProductID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
                  </dt><br />
            </dl>
           }
           
        </div>
    </div>



