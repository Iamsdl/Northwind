@model NorthwindWeb.Models.Customers

@{
    ViewBag.Title = "Detalii";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Detalii</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Clienti", "Index", "Customers")
    </li>
    <li class="active">Detalii</li>
</ol>
<div>
    <h4>Client</h4>
    <hr />
  
    <dl class="dl-horizontal">
        <dt>
            Nume Companie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            Nume Contact
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactName)
        </dd>

        <dt>
            Pozitie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactTitle)
        </dd>

        <dt>
            Adresa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Oras
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            Regiune
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>

        <dt>
            Cod Postal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>

        <dt>
            Tara
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            Telefon
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Fax
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fax)
        </dd>

    </dl>
</div>
<p>
    <button class="btn btn-default">@Html.ActionLink("Modifica", "Edit", "Customers", new { id = Model.CustomerID }, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button> |
    <button class="btn btn-default">@Html.ActionLink("Inapoi", "Index", "Customers", htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>

</p>
