@model PagedList.IPagedList<NorthwindWeb.Models.Customers>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Clienti";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Clienti</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
   
    <li class="active">Clienti</li>
</ol>
<hr />
<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Clienti", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Customers/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<table class="table">
    <tr>
        <th>
            Nume Companie
        </th>
        <th>
            Nume Contact
        </th>
        <th>
            Pozitie
        </th>
        <th>
            Oras
        </th>
        <th>
            Tara
        </th>
        <th>
            Telefon
        </th>

        <th>
            Optiuni
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Detalii", "Details", new { id = item.CustomerID }) |
                @Html.ActionLink("Sterge", "Delete", new { id = item.CustomerID })
            </td>
        </tr>
    }

</table>
<div class="row text-center">
    <div class="col-lg-12">
        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) din @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", "Customers", new {search = ViewBag.search, page }))
    </div>
</div>
