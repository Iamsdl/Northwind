@model PagedList.IPagedList<NorthwindWeb.Models.Products>
@using PagedList.Mvc;
@{int itemCount = Model.Count; }
<div class="container whiterounded">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Products
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">@ViewBag.title</li>
            </ol>
        </div>
    </div>
    @{
        for (int i = 0; i < itemCount; i += 2)
        {
            <div class="row productdiv">
                <div class="col-md-6 portfolio-item">
                    <img src="/Images/@(ViewBag.title)/@(Model.ElementAt(i).ProductID).jpg" class="img-responsive contentcenter products">

                    <div class="shopcartcontainer-products">
                        <div class="align-middle img-circle roundedshop">
                            <i class="glyphicon glyphicon-shopping-cart align-middle"></i>
                            <div class="shopcart-container-text">
                                <span id="shopcart-productcount">+</span>
                            </div>
                        </div>
                    </div>


                    <h3 class="text-center prodpad">
                        @Model.ElementAt(i).ProductName <br />
                        <span class="price"> @Decimal.Round((decimal)Model.ElementAt(i).UnitPrice, 2) Lei</span>
                    </h3>
                </div>
                @if (i + 1 < itemCount)
                {
                    <div class="col-md-6 portfolio-item">

                        <img src="/Images/@(ViewBag.title)/@(Model.ElementAt(i+1).ProductID).jpg" class="img-responsive contentcenter products">
                            <div class="shopcartcontainer-products">
                                <div class="align-middle img-circle roundedshop">
                                    <i class="glyphicon glyphicon-shopping-cart align-middle"></i>
                                    <div class="shopcart-container-text">
                                        <span id="shopcart-productcount">+</span>
                                    </div>
                                </div>
                            </div>

                            <h3 class="text-center prodpad">
                                @Model.ElementAt(i + 1).ProductName <br />
                                <span class="price"> @Decimal.Round((decimal)Model.ElementAt(i + 1).UnitPrice, 2) Lei</span>
                            </h3>
                        </div>
                }
            </div>
            <hr />
        }
    }
    <hr>
    <div class="row text-center">
        <div class="col-lg-12">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Products", "Products",
            new { category = ViewBag.title, page }))
        </div>
    </div>
</div>