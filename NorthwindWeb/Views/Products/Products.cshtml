@model PagedList.IPagedList<NorthwindWeb.ViewModels.ViewProductCategoryS>
@using PagedList.Mvc;
@{int itemCount = Model.Count; }
<div class="container whiterounded coloronwhite">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Produse
            </h1>
            <div>
                <ol class="breadcrumb">
                    <li class="active">
                        @ViewBag.title

                        <form id="searchInput" class="prodsearch" action="@Url.Action("Products","Products",new { category=ViewBag.title, search,page=1 } )">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    @{
        for (int i = 0; i < itemCount; i += 2)
        {
            <div class="row productdiv">
                <div class="col-md-6 portfolio-item">
                    <img src="/Images/@Model.ElementAt(i).CategoryName/@(Model.ElementAt(i).ProductID).jpg" class="img-responsive contentcenter products">

                    <h3 class="text-center prodpad">
                        @Model.ElementAt(i).ProductName <br />
                        <span class="price"> @Model.ElementAt(i).ProductPrice Lei</span>
                    </h3>
                </div>
                @if (i + 1 < itemCount)
                {
                    <div class="col-md-6 portfolio-item">

                        <img src="/Images/@Model.ElementAt(i + 1).CategoryName/@(Model.ElementAt(i+1).ProductID).jpg" class="img-responsive contentcenter products">
                            <div class="shopcartcontainer-products">
                                <div class="align-middle img-circle roundedshop">
                                    <i class="glyphicon glyphicon-shopping-cart align-middle"></i>
                                    <div class="shopcart-container-text">
                                        <span id="shopcart-productcount">+</span>
                                    </div>
                                </div>
                            </div>

                            <h3 class="text-center prodpad">
                                @Model.ElementAt(i + 1).ProductName <br />
                                <span class="price"> @Model.ElementAt(i + 1).ProductPrice Lei</span>
                            </h3>
                        </div>
                }
            </div>
            <hr />
        }
    }
    <hr>
    <div class="row text-center">
        <div class="col-lg-12">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Products", "Products",
            new { category = ViewBag.title, page }))
        </div>
    </div>
</div>