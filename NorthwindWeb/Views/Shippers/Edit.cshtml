@model NorthwindWeb.Models.Shippers

@{
    ViewBag.Title = "Editeaza";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Editeaza</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Expeditor</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ShipperID)

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Nume Companie</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyName)
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Telefon</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salveaza" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
