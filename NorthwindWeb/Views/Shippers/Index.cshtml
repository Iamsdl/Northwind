@model IEnumerable<NorthwindWeb.Models.Shippers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Expeditori</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>

    <li class="active">Expeditori</li>
</ol>
<hr />
<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Expeditor", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Shippers/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Expeditori
                </h4>
            </div>
            <div class="panel-body">
                <table id="ShippersTable" class="cell-border hover order-column">

                    <thead>
                        <tr>
                            <th>
                                Nume Companie
                            </th>
                            <th>
                                Telefon
                            </th>
                            <th>
                                Sterge
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

