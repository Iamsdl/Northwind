@model List<NorthwindWeb.Models.Products>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Produse";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<h2>Produse @ViewBag.category</h2>

<br/>
<div class="">
    <button class="btn btn-default">@Html.ActionLink("Adauga Produs", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="~/Controllers/Product/Index">
        <div class="input-group cssencapsulate">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br/>
<table id="MyTable" class="table">
    <thead>
        <tr>
            <th>
                Nume Produs
            </th>
            <th>
                Pret
            </th>
            <th>
                In Stoc
            </th>
            <th>
                Pe Comezi
            </th>
            <th>
                Stoc limita
            </th>
            <th>
                Indisponibil
            </th>
            <th>
                Sterge
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.ProductName, "Details", new { id = item.ProductID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsOnOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReorderLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discontinued)
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.ProductID })" ><i class="fa fa-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>