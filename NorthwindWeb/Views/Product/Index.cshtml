@model List<NorthwindWeb.Models.Products>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Produse";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrEmpty(ViewBag.category))
        {
            <h2>
                <a href=@Url.Action("Index", "Product")>Produse</a> / @ViewBag.category
            </h2>
        }
        else
        {
            <h2>Produse</h2>
        }
        <br />
        <br />

        <div>
            <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Produs", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
            <form action="/Product/Index">
                <div class="input-group cssencapsulate paddingLeftTen">
                    <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Lista produse
