@model NorthwindWeb.Models.Employees

@{
    ViewBag.Title = "Sterge";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
    <h2>Sterge</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Angajati", "Index", "Employees")
    </li>
    <li class="active">Sterge</li>
</ol>

    <h3>Esti sigur ca vrei sa-l stergi?</h3>
    <div>
        <h4>Angajat</h4>
        <hr />
        
        <dl class="dl-horizontal">
            <dt>
                Nume
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Prenume
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                Pozitie
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                Metoda de adresare
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TitleOfCourtesy)
            </dd>

            <dt>
                Data nasterii
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BirthDate)
            </dd>

            <dt>
                Data angajarii
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HireDate)
            </dd>

            <dt>
                Adresa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                Oras
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                Regiune
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Region)
            </dd>

            <dt>
                Cod Postal
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostalCode)
            </dd>

            <dt>
                Tara
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                Telefon
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HomePhone)
            </dd>

            <dt>
                Interior
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Extension)
            </dd>
            <dt>
                Note
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notes)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sterge" class="btn btn-default" /> |
                <button class="btn btn-default">@Html.ActionLink("Inapoi", "Index", null, htmlAttributes: new { style = "text-decoration:none; color:#333" }) </button>
            </div>
        }
    </div>
