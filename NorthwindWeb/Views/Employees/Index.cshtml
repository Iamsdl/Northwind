@model PagedList.IPagedList<NorthwindWeb.Models.Employees>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Angajati";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<h2>Angajati</h2>

<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Angajat", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Employees/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<table class="table">
    <tr>
        <th>
            Nume
        </th>
        <th>
            Prenume
        </th>
        <th>
            Pozitie
        </th>
        <th>
            Oras
        </th>
        <th>
            Tara
        </th>
        <th>
            Telefon
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomePhone)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.EmployeeID }) |
                @Html.ActionLink("Detalii", "Details", new { id = item.EmployeeID }) |
                @Html.ActionLink("Sterge", "Delete", new { id = item.EmployeeID })
            </td>
        </tr>
    }

</table>
<div class="row text-center">
    <div class="col-lg-12">
        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) din @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", "Employees", new {search = ViewBag.search, page }))
    </div>
</div>