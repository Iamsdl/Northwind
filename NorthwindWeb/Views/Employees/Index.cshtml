@model PagedList.IPagedList<NorthwindWeb.Models.Employees>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Angajati";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<h2>Angajati</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>

    <li class="active">Angajati</li>
</ol>
<hr />
<br />
<div>
    <button class="btn btn-default crudFormButtonLeftOfSearch">@Html.ActionLink("Adauga Angajat", "Create", null, htmlAttributes: new { style = "text-decoration: none;color:black;" })</button>
    <form action="/Employees/Index">
        <div class="input-group cssencapsulate paddingLeftTen">
            <input type="text" name="search" class="form-control searchinput" style="width:auto" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Lista Angajati
                </h4>
            </div>
            <div class="panel-body">
                <table id="EmployeesTable" class="table">
                    <thead>
                        <tr>
                            <th>
                                Nume
                            </th>
                            <th>
                                Prenume
                            </th>
                            <th>
                                Pozitie
                            </th>
                            <th>
                                Oras
                            </th>
                            <th>
                                Tara
                            </th>
                            <th>
                                Telefon
                            </th>
                            <th>
                                Sterge
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>

                </table>
            </div>
        </div>
    </div>
</div>
                <div class="row text-center">
                    <div class="col-lg-12">
                        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) din @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index", "Employees", new { search = ViewBag.search, page }))
                    </div>
                </div>
